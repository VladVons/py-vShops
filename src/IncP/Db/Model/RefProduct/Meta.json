{
    "table": {
        "ref_product": {
            "column": {
                "id":           {"type": "serial"},
                "enabled":      {"type": "boolean", "value": "default true"},
                "model":        {"type": "varchar(16)"},
                "is_service":   {"type": "boolean", "value": "default false"},
                "tenant_id":    {"type": "integer"}
            },
            "index": {
                "id":           {"type": "primary"}
            },
            "foreign_key": {
                "tenant_id":   {"table": "ref_tenant", "column": "id", "type": "null"}
            },
            "comment": "product main table"
        },
        "ref_product_image": {
            "column": {
                "id":           {"type": "serial"},
                "image":        {"type": "varchar(64)", "value": "not null"},
                "sort_order":   {"type": "smallint"},
                "product_id":   {"type": "integer"}
            },
            "index": {
                "id":           {"type": "primary"}
            },
            "foreign_key": {
                "product_id":   {"table": "ref_product", "column": "id"}
            },
            "comment": "product images"
        },
        "ref_product_lang": {
            "column": {
                "title":        {"type": "varchar(128)", "value": "not null"},
                "descr":        {"type": "text"},
                "product_id":   {"type": "integer"},
                "lang_id":      {"type": "integer"}
            },
            "index": {
                "product_id, lang_id": {"type": "primary"}
            },
            "foreign_key": {
                "product_id":   {"table": "ref_product", "column": "id"},
                "lang_id":      {"table": "ref_lang", "column": "id"}
            }
        }
    }
}
