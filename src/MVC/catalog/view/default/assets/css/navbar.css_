.dropdown-menu .dropdown .dropdown-menu {
    left: 100%;
    top: 0%;
    margin: 0 1px;
    border-width: 0;
}

/* desktop */
@media (min-width: 768px) {
    /* Fixed */
    body {
        padding-top: 80px;
    }

    .navbar.fixed-top {
        position: fixed;
        width: 100%;
        box-shadow: 0 2px 10px var(--colorBgBtn);
    }
}

/* mobile */
@media (max-width: 767px) {
    /* Non-fixed */
    body {
        padding-top: 2px;
    }

    .navbar.fixed-top {
        position: static;
        box-shadow: none;
        box-shadow: 0 2px 10px var(--colorBgBtn);
    }
}
