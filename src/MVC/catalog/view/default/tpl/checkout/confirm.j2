{% extends '_inc/layout1.j2' %}

{% block head %}
  <script type='module' src='/default/js/pages/checkout/confirm.js' ></script>
{% endblock %}

{% block content %}
     <title class='cart'>{{lang.confirm_order}}</title>
      <total>
        <num label='{{lang.product_count}}'></num>
        <flex></flex>
        <pay label='{{lang.payment_type}}'></pay>
        <flex></flex>
        <sum label='{{lang.to_pay}}'></sum>
      </total>

      <confirm>
        <label>{{lang.for_confirm_need}}:</label>
        <client>
          <input type='text' maxlength=12 title="{{lang.chars_name_rule}}" required></input>
          <placeholder class='icon-user'>{{lang.name}}:</placeholder>
        </client>
        <phone>
          <input type='text' maxlength=10 title="{{lang.chars_phone_rule}}" required></input>
          <placeholder class='icon-phone'>{{lang.phone}}:</placeholder>
        </phone>
        <example>{{lang.phone_example}}</example>
      </confirm>
      <buttons>
        <button class='continue' onclick='history.go(-1)'>{{lang.back_to_cart}}</button>
        <button class='checkout' href='{{href.confirm}}'>{{lang.confirm_order}}</button>
      </buttons>
{% endblock %}
