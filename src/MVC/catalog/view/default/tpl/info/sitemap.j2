{% extends '_inc/layout1.j2' %}

{% block content %}
<!-- sitemap + -->
<div class="container mt-3">
    <div class="vTitle m-3">{{lang.sitemap}}</div>

    <ul>
    {%- for x in categories_a[id_a] recursive %}
      {%- if x.id in categories_a %}
        <li><a href="{{x.href}}">{{x.title}} ({{x.products}})</a></li>
        <ul>
          {{ loop(categories_a[x.id])}}
        </ul>
      {%- else %}
        <li><a href="{{x.href}}">{{x.title}} ({{x.products}})</a></li>
      {%- endif %}
    {%- endfor %}
    </ul>
</div>
<!-- sitemap - -->
{% endblock %}
