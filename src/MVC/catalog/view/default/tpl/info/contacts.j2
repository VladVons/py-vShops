{% extends '_inc/layout1.j2' %}

{% block content %}
<!-- contacts + -->
<div class="container pb-3">
  <div class="vTitle">{{lang.contacts}}</div>
  <div>
    <div class="row">
      <div class="col-md-3 vBgSlave">
        <div class="pt-2">
          <p><i class="fa fa-location-arrow m-1"></i>{{lang.address_}}</p>
          <p><i class="fa fa-phone m-1"></i>{{lang.phone_}}</p>
          <p><i class="fa fa-envelope m-1"></i>{{lang.email_}}</p>
        </div>
      </div>
      <div class="col-md-9 pb-2 vBgMaster">
        <iframe width="100%" height="200" scrolling="yes" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2588.4689421367148!2d25.594393715699074!3d49.551174379361576!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x473036b30538aa89%3A0xd60142e4959d437d!2z0J7RgdGC0LXRgA!5e0!3m2!1suk!2sua!4v1549970342545"></iframe>
      </div>
    </div>

    <div class="row mt-1">
      <div class="col-md-3 vBgSlave">
        <div>
          <h2><i class="fa fa-envelope m-1"></i>{{lang.write_us}}</h2>
          <h4>{{lang.love_hear_from_you}}</h4>
        </div>
      </div>
      <div class="col-md-9 pb-2 vBgMaster">
        <div class="mt-4">
          <div class="vTitle">{{lang[mail_status]}}</div>

          <form method="post">
            <div class="mt-2">
              <b>{{lang.name}}*</b>
              <input type="text" class="form-control" name="name" placeholder="{{lang.name}}" required/>
            </div>
            <div class="mt-2">
              <b>{{lang.email}}*</b>
              <input type="email" class="form-control" name="email" placeholder="{{lang.email}}" required/>
            </div>
            <div class="mt-2">
              <b>{{lang.comment}}*</b>
              <textarea class="form-control" name="comment" rows="10" required></textarea>
            </div>
            <div class="mt-4">
              <button type="submit" class="btn btn-primary"><i class="fa fa-envelope m-1"></i>{{lang.send}}</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!--  contacts - -->
  {% endblock %}
