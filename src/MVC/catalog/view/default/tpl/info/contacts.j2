{% extends '_inc/layout1.j2' %}

{% block content %}
<!-- contacts + -->
<div class="container pb-3">
  <div class="vTitle">{{title}}</div>
  <div>
    <div class="row">
      <div class="col-md-3 vBgSlave">
        <div class="pt-2">
          <p><i class="fa fa-location-arrow m-1"></i>{{lang.address_}}</p>
          <p><i class="fa fa-location-arrow m-1"></i>{{lang.location_}}</p>
          <p><i class="fa fa-phone m-1"></i>{{lang.phone1_}}</p>
          <p><i class="fa fa-phone m-1"></i>{{lang.phone2_}}</p>
          <!--<p><i class="fa fa-envelope m-1"></i>{{lang.email_}}</p>-->
        </div>
      </div>
      <div class="col-md-9 pb-2 vBgMaster">
        <iframe width="100%" height="300" scrolling="yes"
        src="https://www.openstreetmap.org/export/embed.html?bbox=25.5865141,49.4747142,25.5965141,49.4847142&layer=mapnik&marker=49.4797142,25.5915141&zoom=19"></iframe>
      </div>
    </div>
    <div class="row mt-1">
      <div class="col-md-3 vBgSlave">
        <div>
          <h2><i class="fa fa-envelope m-1"></i>{{lang.write_us}}</h2>
          <h2><i class="fa fa-star m-1"></i><a href="{{lang.vote_}}">{{lang.vote_us}}</a></h2>
          <h2><i class="fa fa-star m-1"></i><a href="{{lang.votes_}}">{{lang.votes}}</a></h2>
        </div>
      </div>
      <div class="col-md-9 pb-2 vBgMaster">
        <div class="mt-4">
          <div class="vTitle">{{lang[mail_status]}}</div>

          <form method="post">
            <div class="mt-2">
              <b>{{lang.name}}*</b>
              <input type="text" class="form-control" name="name" placeholder="{{lang.name}}" required>
            </div>
            <div class="mt-2">
              <b>{{lang.email}}*</b>
              <input type="email" class="form-control" name="email" placeholder="{{lang.email}}" required>
            </div>
            <div class="mt-2">
              <b>{{lang.comment}}*</b>
              <textarea class="form-control" name="comment" rows="10" required></textarea>
            </div>
            <div class="mt-4">
              <button type="submit" class="btn btn-primary"><i class="fa fa-envelope m-1"></i>{{lang.send}}</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="application/ld+json">
  {{schema}}
</script>
<!--  contacts - -->
{% endblock %}
