<control>
  <mode class='list' title='{{lang.list}}' onclick='catalog.setMode(this.className)'></mode>
  <mode class='grid' title='{{lang.grid}}' onclick='catalog.setMode(this.className, true)'></mode>
  <mode class='compare' title='{{lang.compare}} (0)' onclick='catalog.setMode(this.className)'></mode>

  <flex></flex>

  <label>{{lang.sort}}</label>
  <select id='sort'>
    <option value='common' selected>{{lang.by_default}}</option>
    <option value='sort=title&order=asc'>{{lang.by_name_asc}}</option>
    <option value='sort=title&order=desc'>{{lang.by_name_desc}}</option>
    <option value='sort=price&order=asc'>{{lang.by_price_asc}}</option>
    <option value='sort=price&order=desc'>{{lang.by_price_desc}}</option>
  </select>

  <label>{{lang.show}}</label>
  <select id='limit'>
    <option value='12' selected>12</option>
    <option value='36'>36</option>
    <option value='108'>108</option>
  </select>
</control>
