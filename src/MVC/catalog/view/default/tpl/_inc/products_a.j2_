<!-- products_a + -->
<div class="container pb-3">
  <div class="text-center m-3">
    <h1>{{products_a_title}}</h1>
    {% for xDescr in products_a_descr %}
      <h2>{{xDescr}}</h2>
    {% endfor %}
  </div>

  {% if dbl_products_a_sort %}
  <div class="row pb-3">
    <div class="col-3">
      <label class="control-label" for="input-sort">сортування</label>
      <select class="form-control" id="input-sort" onchange="location=this.value">
      {% for Rec in TDbList().Import(dbl_products_a_sort) %}
        <option value="{{Rec.href}}" {{Rec.selected}}>{{Rec.title}}</option>
      {% endfor %}
      </select>
    </div>
  </div>
  {% endif %}

  <div class="row">
  {% for Rec in TDbList().Import(dbl_products_a) %}
    <div class="col-sm-6 col-md-4 col-lg-2 mb-2">
      <div class="vCard">
        <div class="card">
          <div class="card-header vImgCenter">
            <a href="{{Rec.product_href}}"><img src="{{Rec.thumb}}" alt="{{Rec.product_title}}"></a>
          </div>
          <div class="card-body">
            <a href="{{Rec.category_href}}">{{Rec.category_title}}</a>
            <div class="card-title">
              <h3>{{Rec.product_title|truncate(45, True, '...')}}</h3>
            </div>
          </div>
          <div class="card-footer">
            <h2 class="fw-bold">{{Rec.price|round|int}} грн</h2>
            <hr class="mt-1"/>
            <a href="{{Rec.tenant_href}}">{{Rec.tenant_title}}</a>
            <p></p>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</div>
<!-- products_a - -->
