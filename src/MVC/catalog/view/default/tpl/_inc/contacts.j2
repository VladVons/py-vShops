<!-- contact + -->
<div class="container pb-3">
    <div class="vTitle">{{lang.contacts}}</div>
    <div>
        <div class="row">
            <div class="col-md-3 vBgSlave">
                <div class="pt-2">
                    <p><i class="fa fa-location-arrow m-1"></i>{{lang.address_}}</p>
                    <p><i class="fa fa-phone m-1"></i>{{lang.phone_}}</p>
                    <p><i class="fa fa-envelope m-1"></i>{{lang.email_}}</p>
                </div>
            </div>
            <div class="col-md-9 pb-2 vBgMaster">
                <iframe width="100%" height="200" scrolling="yes" src="https://www.google.com/maps/embed/v1/place?q=Cyberborg%20Bodyart%2C%20Bangka%2C%20Jakarta%2C%20Indonesia&key=AIzaSyCGz8WzqxQw1OwHWey3LCTjqKFG9feCxP4"></iframe>
            </div>
        </div>

        <div class="row mt-1">
            <div class="col-md-3 vBgSlave">
                <div>
                    <h2><i class="fa fa-envelope m-1"></i>{{lang.write_us}}</h2>
                    <h4>{{lang.love_hear_from_you}}</h4>
                </div>
            </div>
            <div class="col-md-9 pb-2 vBgMaster">
                <form id="MyForm">
                    <div class="mt-2">
                        <b>{{lang.name}}</b>
                        <input type="text" class="form-control" id="fname" placeholder="{{lang.name}}" name="name">
                    </div>
                    <div class="mt-2">
                        <b>{{lang.email}}</b>
                        <input type="email" class="form-control" id="email" placeholder="{{lang.email}}" name="email">
                    </div>
                    <div class="mt-2">
                        <b>{{lang.comment}}</b>
                        <textarea class="form-control" rows="5" id="comment"></textarea>
                    </div>
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-envelope m-1"></i>{{lang.send}}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
