<div class="container mt-3">
  <h2 class="fw-bold text-center">{{ title }}</h2>
  <div class="row gx-1">
  {% for Rec in TDbList().Import(dbl_category_popular) %}
    <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-1 ">
      <div class="vCard ">
        <div class="card ">
          <a href="{{Rec.href}}">
            <div class="card-header vImgCenter rounded-top-3">
              <img src="{{Rec.thumb}}" class="vGrayscale" alt="{{Rec.title}}">
            </div>
          </a>
          <div class="text-center">
            <h3 class="fw-bold">{{Rec.title}}</h3>
            {% set Childs = Rec.GetField('childs', []) %}
            {% for xChild in Childs[:5] %}
              <a href="{{xChild[0]}}">{{xChild[1]}}</a>
            {% endfor %}

            {% if Childs | length >= 5 %}
              <a href="{{Rec.href}}">{{lang.show_all}}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</div>
