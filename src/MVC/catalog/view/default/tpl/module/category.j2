<title>{{title}}</title>
<catalog>
{% for Rec in TDbList().Import(data) %}
    {% if Rec.parent_idt == 0 %}
        <a href='{{Rec.href}}'>{{Rec.title}} {{Rec.products}}</a>
    {% else %}
        {% if Rec.idt == category_id %}
            <a class='second active' href='{{Rec.href}}'>{{Rec.title}} {{Rec.products}}</a>
        {% else %}
            <a class='second' href='{{Rec.href}}'>{{Rec.title}} {{Rec.products}}</a>
        {% endif %}
    {% endif %}
{% endfor %}
</catalog>
