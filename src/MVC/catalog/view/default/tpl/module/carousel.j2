<!-- module/carousel + -->
<div class="container pb-3">
    <div class="vTitle">{{_title_}}</div>

    <div id="carouselCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
        {% set Dbl = TDbList().Import(dbl_carousel) %}
        {% for Rec in Dbl %}
            {% if loop.first %}
            <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="{{loop.index0}}" class="active" aria-current="true" aria-label="Slide {{loop.index0}}"></button>
            {% else %}
            <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="{{loop.index0}}" aria-label="Slide {{loop.index0}}"></button>
            {% endif %}
        {% endfor %}
        </div>
        <div class="carousel-inner">
        {% for Rec in Dbl %}
            {% if loop.first %}
            <div class="carousel-item active">
            {% else %}
            <div class="carousel-item">
            {% endif %}
                <img src="{{Rec.image}}" class="d-block w-100">
                <div class="carousel-caption">
                    <h3>{{Rec.title}}</h3>
                    <h4>{{Rec.descr}}</h4>
                </div>
            </div>
        {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">{{lang.previous}}</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">{{lang.next}}</span>
        </button>
    </div>
</div>
<!-- module/carousel- -->
