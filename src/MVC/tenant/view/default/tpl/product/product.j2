{% extends '_inc/layout1.j2' %}

{% if product.price.sale and product.price.purchase %}
    {% set percentage = ((product.price.sale / product.price.purchase * 100) - 100) | round(1) %}
{% else %}
    {% set percentage = 0 %}
{% endif %}

{% block content %}
<!-- content product + -->
<div class="container mt-3 vBgMaster">
  <h2>{{lang.edit_product}}</h2>

    <form id="viFormUndo" method="post">
        <div class="mb-3">
            <input  type="checkbox" name="enabled" id="chkInput" {% if product.enabled %}checked{% endif %}/>
            <label class="form-check-label">{{lang.enabled}}</label>
        </div>

        <div class="mb-3">
            <label>{{lang.category}}</label>
            <div class="d-flex">
                <input type="hidden" id="viCategoryId" name="category_id" value="{{product.category_id}}">
                <input type="text" class="form-control m-1" name="category_title" id="viCategoryTitle" value="{{product.category_title}}" readonly/>
                <ul class="navbar-nav" title="{{lang.categories}}">
                    <li class="nav-item dropdown" id="viCategory">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" id="viCategoryMenu"><i class="fa fa-bars" style="font-size: 1.5em;"></i></a>
                        <ul class="dropdown-menu" id="viCategoryItems">
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-10">
              <label>{{lang.name}}</label>
              <input type="text" class="form-control" name="title" placeholder="{{lang.name}}" value="{{product.title}}"/>
            </div>
              <div class="col-2">
                <label>{{lang.code}}</label>
                <input type="text" class="form-control"  value="{{product.id}} / {{product.idt}}" readonly/>
              </div>
        </div>

        <div class="mb-3">
          <label>{{lang.descr}}</label>
          <textarea class="form-control" name="descr" rows="3" placeholder="{{lang.description}}" readonly></textarea>
        </div>

        <div class="row mb-3">
          <div class="col">
            <label>{{lang.price_sale}}</label>
            <input type="number" class="form-control" name="price_sale" placeholder="{{lang.price_sale}}" value="{{product.price.sale}}" min="0"/>
          </div>
          <div class="col">
            <label>{{lang.price_purchase}}</label>
            <input type="number" class="form-control" name="price_purchase" value="{{product.price.purchase}}" min="0"/>
          </div>
          <div class="col">
            <label>{{lang.margin}} %</label>
            <input type="number" class="form-control" value="{{percentage}}" readonly/>
          </div>
        </div>

        <div class="mb-3">
          <label>{{lang.quantity}}</label>
          <input type="number" class="form-control" name="quantity" placeholder="{{lang.quantity}}" value="{{product.rest}}" min="0"/>
        </div>

        <div class="mb-3">
          <label>{{lang.images}}</label>
          <input1 type="file" class="form-control" id="Images" multiple/>
        </div>

        <button type="button" class="btn btn-primary" id="viBtnSave">{{lang.save}}</button>
        <button type="button" class="btn btn-primary" id="viBtnUndo">{{lang.undo}}</button>
  </form>
</div>
<!-- content product + -->
{% endblock %}


{% block foot %}
<!-- foot product + -->
<script src="/default/assets/js/submenu_ajax.js"></script>

<script>
    const formTracker = new TFormChangeTracker('viFormUndo', 'vChanged')
    document.getElementById('viBtnUndo').onclick = () => formTracker.undoChanges()
    document.getElementById('viBtnSave').onclick = () => formTracker.submit()

    const chkInput = document.getElementById("chkInput")
    chkInput.onclick = function(event) {
        formTracker.setReadonly(!event.target.checked)
        event.target.style.pointerEvents = 'auto'
    }

    document.addEventListener('DOMContentLoaded', function() {
        formTracker.setReadonly(!chkInput.checked)
        chkInput.style.pointerEvents = 'auto'
    })

    function OnClickCategory(aId, aTitle) {
        document.getElementById('viCategoryId').value = aId
        document.getElementById('viCategoryTitle').value = aTitle
    }

    const param = {selector: 'viCategory', items: 'viCategoryItems', url: '{{href.category_ajax}}'}
    document.getElementById('viCategoryMenu').onclick = () => OnClickDropdownMenu(param)
    initDropdownMenu({selector: 'viCategory'})
</script>
<!-- foot product - -->
{% endblock %}
