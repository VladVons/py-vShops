{% extends '_inc/layout1.j2' %}

{% block content %}
<!-- product + -->
<div class="container mt-3 vBgMaster">
  <h2>Edit Product</h2>
  
    <form>
        <div class="mb-3">
            <input  type="checkbox" name="enabled" checked>
            <label class="form-check-label">{{lang.enabled}}</label>
        </div>

        <div class="mb-3">
            <label>{{lang.category}}</label>
            <div class="d-flex">
                <input type="text" class="form-control m-1" name="category_title" value="{{product.category_title}}" readonly>
                <ul class="navbar-nav" title="categories">
                    <li class="nav-item dropdown" id="viMainNavbar2">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" onclick="navbarCategoryClick()" href="#"><i class="fa fa-bars" style="font-size: 1.3em;"></i></a>
                        <ul class="dropdown-menu" id="viMainNavbarItems">
                            <li><a class="dropdown-item" href="#">item1 </a></li>
                            <li><a class="dropdown-item" href="#">item2 </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-11">
              <label class="form-label">{{lang.name}}</label>
              <input type="text" class="form-control" name="name" placeholder="{{lang.name}}" value="{{product.title}}">
            </div>
              <div class="col-1">
                <label class="form-label">{{lang.code}}</label>
                <input type="text" class="form-control"  value="{{product.id}} / {{product.idt}}" readonly/>
              </div>
        </div>

        <div class="mb-3">
          <label class="form-label">{{lang.descr}}</label>
          <textarea class="form-control" name="description" rows="3" placeholder="{{lang.description}}"></textarea>
        </div>

        <div class="row mb-3">
          <div class="col">
            <label class="form-label">{{lang.price_sale}}</label>
            <input type="text" class="form-control" name="price_sale" placeholder="{{lang.price_sale}}" value="{{product.price}}"/>
          </div>
          <div class="col">
            <label>{{lang.price_income}}</label>
            <input type="text" class="form-control" value="1234.5" readonly/>
          </div>
          <div class="col">
            <label>{{lang.margin}}</label>
            <input type="text" class="form-control" value="12%" readonly/>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label">{{lang.quantity}}</label>
          <input type="text" class="form-control" name="quantity" placeholder="{{lang.quantity}}" value={{product.rest}}>
        </div>

        <div class="mb-3">
          <label for="Images" class="form-label">{{lang.images}}</label>
          <input type="file" class="form-control" id="Images" multiple>
        </div>

        <button type="submit" class="btn btn-primary">{{lang.save}}</button>
  </form>
</div>
<!-- product + -->
{% endblock %}
