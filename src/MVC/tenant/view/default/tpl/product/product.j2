{% extends '_inc/layout1.j2' %}

{% if product.price.sale and product.price.purchase %}
    {% set percentage = ((product.price.sale / product.price.purchase * 100) - 100) | round(1) %}
{% else %}
    {% set percentage = 0 %}
{% endif %}

{% block content %}
<!-- product + -->
<div class="container mt-3 vBgMaster">
  <h2>{{lang.edit_product}}</h2>

    <form id="viFormUndo" method="post">
        <div class="mb-3">
            <input  type="checkbox" name="enabled" {% if product.enabled %}checked{% endif %}/>
            <label class="form-check-label">{{lang.enabled}}</label>
        </div>

        <div class="mb-3">
            <label>{{lang.category}}</label>
            <div class="d-flex">
                <input type="text" class="form-control m-1" name="category_title" value="{{product.category_title}}" readonly/>
                <ul class="navbar-nav" title="categories">
                    <li class="nav-item dropdown" id="viMainNavbar2">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" onclick="navbarCategoryClick()" href="#"><i class="fa fa-bars" style="font-size: 1.3em;"></i></a>
                        <ul class="dropdown-menu" id="viMainNavbarItems">
                            <li><a class="dropdown-item" href="#">item1 </a></li>
                            <li><a class="dropdown-item" href="#">item2 </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-10">
              <label>{{lang.name}}</label>
              <input type="text" class="form-control" name="title" placeholder="{{lang.name}}" value="{{product.title}}"/>
            </div>
              <div class="col-2">
                <label>{{lang.code}}</label>
                <input type="text" class="form-control"  value="{{product.id}} / {{product.idt}}" readonly/>
              </div>
        </div>

        <div class="mb-3">
          <label>{{lang.descr}}</label>
          <textarea class="form-control" name="descr" rows="3" placeholder="{{lang.description}}" readonly></textarea>
        </div>

        <div class="row mb-3">
          <div class="col">
            <label>{{lang.price_sale}}</label>
            <input type="number" class="form-control" name="price_sale" placeholder="{{lang.price_sale}}" value="{{product.price.sale}}" min="0"/>
          </div>
          <div class="col">
            <label>{{lang.price_purchase}}</label>
            <input type="number" class="form-control" name="price_purchase" value="{{product.price.purchase}}" min="0"/>
          </div>
          <div class="col">
            <label>{{lang.margin}} %</label>
            <input type="number" class="form-control" value="{{percentage}}" readonly/>
          </div>
        </div>

        <div class="mb-3">
          <label>{{lang.quantity}}</label>
          <input type="number" class="form-control" name="quantity" placeholder="{{lang.quantity}}" value="{{product.rest}}" min="0"/>
        </div>

        <div class="mb-3">
          <label>{{lang.images}}</label>
          <input1 type="file" class="form-control" id="Images" multiple/>
        </div>

        <button type="button" class="btn btn-primary" id="viBtnSave">{{lang.save}}</button>
        <button type="button" class="btn btn-primary" id="viBtnUndo">{{lang.undo}}</button>
  </form>
</div>

<script>
    const formTracker = new TFormChangeTracker('viFormUndo', 'vChanged')
    document.getElementById('viBtnUndo').onclick = () => formTracker.undoChanges()
    document.getElementById('viBtnSave').onclick = () => formTracker.submit()
</script>
<!-- product + -->
{% endblock %}
